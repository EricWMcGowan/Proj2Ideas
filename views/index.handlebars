<body>

  <div class="jumbotron text-center">
    <h2 class="text-center"><i class="fas fa-truck-loading"></i> <i class="fas fa-truck-moving"></i>&nbsp;Hot Load</h2>
    <h1 class="display-3">Jumbo heading</h1>
    <p class="lead">Jumbo helper text</p>
    <hr class="my-2">
    <p>More info</p>
  </div>

  <div class="container">
    <div class="card">
      <ul class="nav nav-pills nav-fill">
        <li class="nav-item">
          <a class="nav-link active" href="#shipper" role="tab" data-toggle="tab">Shipper</a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="#carrier" role="tab" data-toggle="tab">Carrier</a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="#broker" role="tab" data-toggle="tab">Broker</a>
        </li>

        </nav>
    </div>
    </ul>
  </div>

  <div class="container">
    <div class="tab-content">

      <div role="tabpanel" class="tab-pane active" id="shipper">
        <div class="form-group">
          <label for="">shipper</label>
          <input type="text" class="form-control" name="" id="" aria-describedby="helpId" placeholder="">
          <small class="form-text text-muted">Enter shipping address</small>
        </div>
      </div>

      <div role="tabpanel" class="tab-pane" id="carrier">
        <div class="form-group">
          <label for="">carrier</label>
          <input type="text" class="form-control" name="" id="" aria-describedby="helpId" placeholder="">
          <small class="form-text text-muted">Enter your address</small> </div>
      </div>


      <div role="tabpanel" class="tab-pane" id="broker">
        <div class="form-group">
          <label for="">broker</label>
          <input type="text" class="form-control" name="" id="" aria-describedby="helpId" placeholder="">
          <small class="form-text text-muted">What do you want to move?</small>
        </div>
      </div>
    </div>
  </div>
