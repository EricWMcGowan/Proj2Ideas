<script>
  $('#shipper a').on('click', function (e) {
    e.preventDefault()
    $(this).tab('show')
  })

  $('#carrier a').on('click', function (e) {
    e.preventDefault()
    $(this).tab('show')
  })

  $('#broker a').on('click', function (e) {
